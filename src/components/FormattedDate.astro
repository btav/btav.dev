---
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  ({
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  })
</time>

<style>
  time {
    font-family: "JetBrains Mono", "Fira Code", ui-monospace, monospace;
    font-size: 0.8rem;
    text-wrap: nowrap;
    color: var(--text-color);
  }
</style>

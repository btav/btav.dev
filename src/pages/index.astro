---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import localProfileImage from "../content/images/profile.png";
import SocialLinks from "../components/SocialLinks.astro";
import Layout from "../layouts/Layout.astro";
import PostLink from "../components/PostLink.astro";
import ExperienceLink from "../components/ExperienceLink.astro";
import { WORK, VOLUNTEER, EDUCATION } from "../consts";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="hello there 👋">
  <div class="container">
    <section class="hero">
      <Image
        class="profile-image"
        src={localProfileImage}
        alt="cartoon representation of Brian"
      />
      <div class="hero-content">
        <h1>Brian Farias Tavares</h1>
        <p>
          A passionate software engineer who cares about their craft, based in
          <a
            href="https://www.google.ca/maps/place/Ottawa,+ON/@45.2496825,-76.1298849,10z/data=!3m1!4b1!4m6!3m5!1s0x4cce05b25f5113af:0x8a6a51e131dd15ed!8m2!3d45.4200572!4d-75.7003397!16zL20vMDVrc2g?entry=ttu"
            >Ottawa, Canada 🇨🇦</a
          >
        </p>
        <SocialLinks />
      </div>
    </section>
    <section class="posts">
      <h2>✍️ Writings</h2>
      {
        posts.map((post) => (
          <PostLink
            slug={post.slug}
            imageUrl={post.data.heroImage}
            title={post.data.title}
            date={post.data.pubDate}
            description={post.data.description}
          />
        ))
      }
    </section>
    <section class="experience">
      <h2>👨‍🚀 Work</h2>
      {
        WORK.map(({ title, startDate, endDate, company, image, url }) => (
          <ExperienceLink
            title={title}
            startDate={startDate}
            endDate={endDate}
            company={company}
            image={image}
            url={url}
          />
        ))
      }
    </section>
    <section class="experience">
      <h2>🙋‍♂️ Volunteering</h2>
      {
        VOLUNTEER.map(({ title, startDate, endDate, company, image, url }) => (
          <ExperienceLink
            title={title}
            startDate={startDate}
            endDate={endDate}
            company={company}
            image={image}
            url={url}
          />
        ))
      }
    </section>
    <section class="experience">
      <h2>🎓 Education</h2>
      {
        EDUCATION.map(({ title, startDate, endDate, company, image, url }) => (
          <ExperienceLink
            title={title}
            startDate={startDate}
            endDate={endDate}
            company={company}
            image={image}
            url={url}
          />
        ))
      }
    </section>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 32px;
  }
  .hero {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 24px;
    width: 100%;
    @media (max-width: 768px) {
      flex-direction: column;
      text-align: center;
    }
  }
  .experience {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  .posts {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  .profile-image {
    width: 192px;
    height: 192px;
    border-radius: 10%;
    box-shadow: var(--box-shadow);
  }
  .hero-content {
    display: flex;
    flex-direction: column;
    @media (max-width: 768px) {
      align-items: center;
    }
  }
</style>

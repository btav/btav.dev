---
import Layout from "../layouts/Layout.astro";
import { WORK, VOLUNTEER, EDUCATION } from "../consts";
import ExperienceLink from "../components/ExperienceLink.astro";
---

<Layout title="resume">
  <div class="container">
    <section class="experience">
      <h2>Work</h2>
      {
        WORK.map(({ title, startDate, endDate, company, image, url }) => (
          <ExperienceLink
            title={title}
            startDate={startDate}
            endDate={endDate}
            company={company}
            image={image}
            url={url}
          />
        ))
      }
    </section>
    <section class="experience">
      <h2>Volunteering</h2>
      {
        VOLUNTEER.map(({ title, startDate, endDate, company, image, url }) => (
          <ExperienceLink
            title={title}
            startDate={startDate}
            endDate={endDate}
            company={company}
            image={image}
            url={url}
          />
        ))
      }
    </section>
    <section class="experience">
      <h2>Education</h2>
      {
        EDUCATION.map(({ title, startDate, endDate, company, image, url }) => (
          <ExperienceLink
            title={title}
            startDate={startDate}
            endDate={endDate}
            company={company}
            image={image}
            url={url}
          />
        ))
      }
    </section>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 32px;
  }
  .experience {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
</style>
